{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "anchor-calendar",
  "version": "0.1.0",
  "identifier": "dev.papig.anchor-calendar",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Anchor Calendar",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 450,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "shortDescription": "심플 데스크톱 달력 앱",
    "longDescription": "Anchor Calendar - 심플하고 조용한 데스크톱 달력 앱",
    "windows": {
      "wix": {
        "language": ["ko-KR", "en-US"]
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
